<div class="jumbotron">  
  <div class="container">
    <h1>Listing articles</h1>
    <table class="table success">
      <tr>
        <td class="col-md-4"><h2> <b>Title</b></h2> </td>
        <td class="col-md-4"><h2> <b>Text</b></h2>  </td>
          <!-- <td colspan="3"></td> -->
      </tr>     
        <% @articles.each do |article| %>
      <tr>
        <td class="col-md-4"><%= article.title %></td>
        <td class="col-md-4"><%= article.text %></td>
        <td class="btn-xs btn"><%= link_to 'Show', article_path(article) %></td>
        <td class="btn-xs btn"><%= link_to 'Edit', edit_article_path(article) %></td>
        <td class="btn-xs btn"><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    </table>

    <table>
      <tr>
        <td class="btn btn-default"> <%= link_to 'Back', articles_path %> </td>
        <td class="btn btn-default"> <%= link_to 'New', new_article_path %> </td>
      </tr>
    </table>

  </div>
</div>

        
